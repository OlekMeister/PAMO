<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Waga"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Wzrost"
        app:layout_constraintTop_toBottomOf="@id/editTextWeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextBMI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="BMI"
        app:layout_constraintTop_toBottomOf="@id/editTextHeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <ToggleButton
        android:id="@+id/toggleButtonGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Kobieta"
        android:textOff="Mężczyzna"
        app:layout_constraintTop_toBottomOf="@id/editTextBMI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewCalorieResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik kaloryczny"
        app:layout_constraintTop_toBottomOf="@id/toggleButtonGender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonCalculateCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oblicz kalorie"
        app:layout_constraintTop_toBottomOf="@id/textViewCalorieResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
